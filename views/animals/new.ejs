<body>
    <h1>New Animal</h1>
        <!--  NOTE: action will be the route, method will be the HTTP verb-->
        <form action="/animals" method="POST">
            Species: <input type="text" name="species" />
            <br/>
            Extinct: <input type="checkbox" name="extinct" />
            <br/>
            Location: <input type="text" name="location" />
            <br/>
            Life Expeactancy: <input type="number" name="lifeExpeactancy" />
            <br/>
            <input type="submit" value="Create Animal"/>
        </form>
</body>
